{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "outDir": "dist",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "types": [
            "node"
        ],
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ]
}